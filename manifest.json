{
  "manifest_version": 3,
  "name": "Website Verification",
  "description": "Helps users verify businesses quickly.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "action_popup.html",
    "default_icon": "icon.png" 
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon.png"
  }
}
